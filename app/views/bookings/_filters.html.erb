<div id="search_form1" style="height: 34px;">
  <%= form_tag bookings_path, method: :get  do %>
    <div class="input-group" style="float: left; width: 90%;">
      <div style="float: left;width: 33%;display: inline-table;">
        <span class="input-group-addon colors"><i class="glyphicon glyphicon-map-marker"></i></span>
        <%= text_field_tag :from, params[:from], placeholder: 'From...', class: "form-control fields" %>
      </div>

      <div style="float: left;width: 33%;display: inline-table;">
        <span class="input-group-addon colors"><i class="glyphicon glyphicon-calendar"></i></span>
        <%= date_field_tag :date, params[:date], placeholder: 'Date...', class: "form-control fields" %>
      </div>

      <div style="float: left;width: 33%;display: inline-table;">
        <%= select_tag :status, options_for_select(@status.map{|s| [s.try(:titleize), s.to_s]}, :selected => params[:status]), prompt: 'Booking Status', class: "form-control fields" %>
      </div>
    </div>

      <div><%= submit_tag "Go", class: "btn btn-sm btn-primary", style: "float: right; height: 34px; margin-bottom: 0;" %></div>
  <% end %>
</div>

<div id="search_form2" style="height: 34px; display: none; ">
  <%= form_tag bookings_path, method: :get  do %>
    <div class="input-group" >
      <span class="input-group-addon colors"><i class="glyphicon glyphicon-map-marker"></i></span>
        <%= text_field_tag :from, params[:from], placeholder: 'From...', class: "form-control" %>
    </div>
    <div class="input-group" >
      <span class="input-group-addon colors"><i class="glyphicon glyphicon-calendar"></i></span>
        <%= date_field_tag :date, params[:date], placeholder: 'Date...', value: Time.now.strftime('%Y-%m-%d'), class: "form-control" %>
    </div>
    <div class="input-group" style="width: 100%;">
      <%= select_tag :status, options_for_select(@status), class: "form-control" %>
    </div>
    <%= submit_tag "Go", class: "btn btn-sm btn-primary", style: "float: right; height: 34px; margin-bottom: 0;" %>
  <% end %>
</div>
