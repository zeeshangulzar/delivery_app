<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>Booking Details</h3>
      </div>
    </div>

    <div class="clearfix"></div>

    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_content">
            <div class="well" style="font-size:14px;">
              <div id="info_well" style="display: flex;">

                <div id="user_info" style="width: 49%">
                  <div class="fa_icon" ><i class="fa fa-map-marker"></i><b> From: </b></div>
                  <div class="icon_field" ><%= @booking.location.address.try(:titleize) %></div>
                  <div class="fa_icon" ><i class="fa fa-spinner"></i><b> Status: </b></div>
                  <div class="icon_field" ><%= @booking.status.try(:titleize) %></div>
                  <div class="fa_icon" ><i class="fa fa-money"></i><b> Total Amount: </b></div>
                  <div class="icon_field" ><%= append_qar(@booking.total_amount) %></div>
                  <div class="fa_icon" ><i class="fa fa-calendar"></i><b> Schedule: </b></div>
                  <div class="icon_field" ><%= @booking.time_slot.date.strftime('%d %b %Y') %>
                    <%= Time.parse(@booking.time_slot.start_time.to_s).strftime("%l:%M %P") %> <b>to</b>
                    <%= Time.parse(@booking.time_slot.end_time.to_s).strftime("%l:%M %P") %>
                  </div>
                </div>
                <br>
                <div id="user_info" style="width: 49%">
                  <b>Sender Details:</b><br>
                  <div class="fa_icon" style="margin-left: 4%"><i class="fa fa-user"></i><b> Name: </b></div>
                  <div class="icon_field" ><%= @booking.user_name.try(:titleize) %></div>
                  <div class="fa_icon" style="margin-left: 4%"><i class="fa fa-envelope"></i><b> Email: </b></div>
                  <div class="icon_field" ><%= @booking.user_email %></div>
                  <div class="fa_icon" style="margin-left: 4%"><i class="fa fa-phone-square"></i><b> Cell: </b></div>
                  <div class="icon_field" ><%= @booking.user_cell %></div>
                </div>
              </div>
              <br>
            </div>

            <% if @orders.present? %>
              <div class="x_content scroll">
              <h3 style="text-align: center; ">Orders</h3>
                <table id="datatable" class="table table-striped table-bordered">
                  <thead>
                    <tr class="colors">
                      <td rowspan="2">To</td>
                      <td rowspan="2">Recipient</td>
                      <td rowspan="2">Tracking ID</td>
                      <td rowspan="2">Status</td>
                      <th colspan="3" scope="colgroup">Quatity</th>
                      <td rowspan="2">Order Time</td>
                      <td rowspan="2">Amount</td>
                      <td rowspan="2">Actions</td>
                    </tr>
                    <tr class="colors">
                      <th>Small</th>
                      <th>Medium</th>
                      <th>Large</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @orders.each do |order| %>
                      <tr>
                        <td><%= order.location.address.try(:titleize) %></td>
                        <td><%= order.recipient_name.try(:titleize) %></td>
                        <td><%= order.tracking_id %></td>
                        <td><%= order.status.try(:titleize) %></td>
                        <td><%= order.small.to_i %></td>
                        <td><%= order.medium.to_i %></td>
                        <td><%= order.large.to_i %></td>
                        <td><%= time_format(order.created_at) %></td>
                        <td><%= append_qar(order.amount) %></td>
                        <td>
                          <%= link_to 'View', order_path(id: order.id), class: "btn btn-info btn-sm " %>
                        </td>
                      </tr>
                    <% end %>

                  </tbody>
                </table>
              </div>
              <div class="dataTables_paginate paging_simple_numbers">
                  <%= paginate @orders, window: 4 %>
              </div>
              <br>
              <%= page_entries_info @orders %>
              <br>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
