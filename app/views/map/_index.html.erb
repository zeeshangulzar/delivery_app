<div class="x_content scroll">
  <table id="datatable" class="table table-striped table-bordered">
    <thead>
      <tr class="colors">
        <th>Name</th>
        <th>Points</th>
        <th>Date</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @map.each do |map| %>
        <tr>
          <td><%= map.name.try(:titleize) %></td>
          <td><%= map.polygons.count %></td>
          <td><%= time_format(map.created_at) %></td>
          <td>
            <%= link_to 'Delete', delete_map_path(id: map.id), method: :delete, data: { confirm: "Are you sure?" }, class: "action_btn btn btn-danger btn-sm " %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="dataTables_paginate paging_simple_numbers">
    <%= paginate @map, window: 4 %>
</div>
<br>
<%= page_entries_info @map, :entry_name => 'polygons' %>
<br>
