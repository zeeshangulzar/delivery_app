<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>Time Slots</h3>
      </div>
    </div>

    <div class="row">

      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="well">
            <form class="form-horizontal" style="height: 31px;">
              <fieldset>
                <div class="control-group">
                  <div class="controls">
                    <div class="input-prepend input-group timeslot">
                      <span class="add-on input-group-addon colors"><i class="glyphicon glyphicon-calendar fa fa-calendar"></i></span>
                      <div id="reportrange_right" class="pull-left" style="background: #fff; cursor: pointer; padding: 5px 10px; border: 1px solid #ccc">
                        <span>YYYY-MM-DD - YYYY-MM-DD</span> <b class="caret"></b>
                      </div>
                    </div>

                    <div id="timeslot_btn" style="float: right; height: 31px;">
                      <button type="button" class="btn btn btn-info btn-sm"  data-toggle="modal" data-target="#add_slot">Add</button>
                      <%= link_to download_template_time_slots_path, class: "btn btn-success btn-sm" do %>
                          <i class="fa fa-download"></i>
                      <% end %>
                    <button type="button" class="btn btn btn-warning btn-sm"  data-toggle="modal" data-target="#add_slot_csv"><i class="fa fa-upload"></i></button>

                  </div>
                </div>
              </fieldset>
            </form>
          </div>

          <div id="add_slot" class="modal fade" role="dialog">
            <div class="modal-dialog">
              <!-- Modal content-->
              <div class="modal-content">
                <div class="modal-header colors">
                  <button type="button" class="close colors" data-dismiss="modal" method="reset">X</button>
                  <h4 class="modal-title">New Time Slot</h4>
                </div>
                <div class="modal-body">
                  <%= render 'form' %>
                </div>
              </div>
            </div>
          </div>

          <div id="edit_slot" class="modal fade" role="dialog">
            <div class="modal-dialog colors">
              <!-- Modal content-->
              <div class="modal-content" style="background: transparent;">
                  <%= render 'form' %>
              </div>
            </div>
          </div>

          <div id="add_slot_csv" class="modal fade" role="dialog">
            <div class="modal-dialog" style="padding-top: 12%;">
              <!-- Modal content-->
              <div class="modal-content">
                <div class="modal-header colors">
                  <button type="button" class="close colors" data-dismiss="modal" method="reset">X</button>
                  <h4 class="modal-title">Import Time Slots</h4>
                </div>
                <div class="modal-body">
                  <%= form_tag import_time_slots_path, method: :post, multipart: true  do %>
                    <label class="csv_upload btn btn-primary btn-sm">
                      <i class="fa fa-file-excel-o"> Choose file</i>
                      <input name="file" type="file" accept= '.csv'/>
                    </label><br>

                    <%= submit_tag "Import", class: "btn btn-success btn-sm", style: "float: right;" %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>

          <div class="x_content">
            <div class="x_content" style="overflow-x: scroll">
              <table id="datatable" class="table table-striped table-bordered">
                <thead>
                  <tr class="colors">
                    <th>Date</th>
                    <th>Start Time</th>
                    <th>End Time</th>
                    <th>Charges</th>
                    <th>Actions</th>
                  </tr>
                </thead>
              <tbody>
                <% @time_slots.each do |time_slot| %>
                  <tr>
                    <td><%= Time.parse(time_slot.date.to_s).strftime("%d %b %Y") %></td>
                    <td><%= Time.parse(time_slot.start_time).strftime("%l:%M %P") %></td>
                    <td><%= Time.parse(time_slot.end_time).strftime("%l:%M %P") %></td>
                    <td><b>QAR </b><%= time_slot.charges %></td>
                    <td><a data-toggle="modal" data-target="#edit_slot" data-remote="<%= edit_time_slot_path(id: time_slot.id) %> #edit_slot" class="btn btn-success btn-sm ">Edit</a>
                    <%= link_to 'Delete', time_slot, class: "btn btn-danger btn-sm ", method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
                </tbody>
              </table>
            </div>
            <div class="dataTables_paginate paging_simple_numbers">
                <%= paginate @time_slots, window: 4 %>
            </div>
            <br>
            <%= page_entries_info @time_slots %>
            <br>
          </div>
        </div>
      </div>

    </div>

  </div>
</div>
