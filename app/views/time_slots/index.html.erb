
<div class="right_col" role="main">
        <div class="">
          <div class="page-title">
            <div class="title_left">
              <h3>Time Slots</h3>
            </div>

          </div>
          <div class="clearfix"></div>

          <div class="row">

            <div class="col-md-12 col-sm-12 col-xs-12">
              <div class="x_panel">
                <div class="x_content">
                  <table id="datatable" class="table table-striped table-bordered">
                    <thead>
                      <tr>
                        <th>Date</th>
                        <th>Start Time</th>
                        <th>End Time</th>
                        <th>Charges</th>
                        <th colspan="3">Settings</th>
                      </tr>
                    </thead>


                    <tbody>
                      <% @time_slots.each do |time_slot| %>
                        <tr>
                          <td><%= time_slot.date %></td>
                          <td><%= time_slot.start_time %></td>
                          <td><%= time_slot.end_time %></td>
                          <td><%= time_slot.charges %></td>
                          <td><%= link_to 'Edit', edit_time_slot_path(time_slot) %></td>
                          <td><%= link_to 'Destroy', time_slot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                      <% end %>

                    </tbody>
                  </table>
                  <%= paginate @time_slots %>
                  <br>
                  <%= link_to 'New Time slot', new_time_slot_path %>
                </div>
              </div>
            </div>

          </div>

        </div>

