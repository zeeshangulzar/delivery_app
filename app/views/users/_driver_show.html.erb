<div class="well col-md-12 col-sm-12 col-xs-12" style="font-size:14px;">
  <%= link_to edit_user_path(id: @user.id), "data-toggle": "tooltip", "data-placement": "bottom", "title": "", "data-original-title": "Edit", class: "btn btn-info btn-sm driver_edit_btn" do %>
  <i class="glyphicon glyphicon-edit"></i>
<% end %>

    <div id="profile_pic" class="col-md-2 col-sm-2 col-xs-12" style="width: 120px">
      <%= image_tag @user.profile.image.present? ? '/public'+@user.profile.image.attachment.url : "no_profile_pic.jpg", style: "height: 100px; width: 100px;"%>
    </div>
    <div id="user_info" class="col-md-5 col-sm-5 col-xs-12">
      <table id="view_table" class="table">
        <tbody>
          <tr>
            <td class="fa_icon"><i class="fa fa-user"></i><b> Name: </b></td>
            <td><%= @user.name.try(:titleize) %></td>
          </tr>
          <tr>
            <td class="fa_icon"><i class="fa fa-envelope"></i><b> Email: </b></td>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <td class="fa_icon"><i class="fa fa-phone-square" ></i><b> Cell: </b></td>
            <td><%= @user.cell %></td>
          </tr>
          <tr>
            <td class="fa_icon"><i class="fa fa-male" ></i><b> Nationality: </b></td>
            <td><%= @user.profile.nationality %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div id="user_info" class="col-md-5 col-sm-5 col-xs-12">
      <table id="view_table" class="table">
        <tbody>
          <tr>
            <td class="fa_icon"><i class="fa fa-gears (alias)"></i><b> Car Make: </b></td>
            <td><%= @user.profile.vehicle_make %></td>
          </tr>
          <tr>
            <td class="fa_icon"><i class="fa fa-automobile (alias)"></i><b> Plate #: </b></td>
            <td><%= @user.profile.plate_name %></td>
          </tr>
          <tr>
            <td class="fa_icon"><i class="fa fa-automobile (alias)"></i><b> License #: </b></td>
            <td><%= @user.profile.license_number %></td>
          </tr>
          <tr>
            <td class="fa_icon"><i class="fa fa-calendar"></i><b> Registered At: </b></td>
            <td><%= time_format(@user.created_at) %></td>
          </tr>
        </tbody>
      </table>
    </div>
</div>
