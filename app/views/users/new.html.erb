  <div class="container body">
    <div class="main_container">
      <div class="right_col" role="main">
        <div class="page-title">
          <div class="title_left">
            <h3>Add Driver</h3>
          </div>
        </div>

        <div class="">
          <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
              <div class="x_panel">
                <div class="x_title">
                  <h2>Personal Details</h2>
                  <div class="clearfix"></div>
                </div>

                <div class="x_content">
                  <br />
                  <%= form_tag save_driver_users_path(@user), method: :post, class: 'form-horizontal form-label-left', id:  'demo-form2' do %>
                    <div class="form-group">
                      <%= label_tag :name, nil, class: "control-label col-md-3 col-sm-3 col-xs-12" %>
                      <div class="col-md-6 col-sm-6 col-xs-12">
                        <%= text_field_tag :name, nil, class: 'form-control col-md-7 col-xs-12', required: true %>
                      </div>
                    </div>

                    <div class="form-group">
                      <%= label_tag :email, nil, class: "control-label col-md-3 col-sm-3 col-xs-12" %>
                      <div class="col-md-6 col-sm-6 col-xs-12">
                        <%= email_field 'user', 'email', class: 'form-control col-md-7 col-xs-12' %>
                      </div>
                    </div>

                    <div class="form-group">
                      <%= label_tag :cell, nil, class: "control-label col-md-3 col-sm-3 col-xs-12" %>
                      <div class="col-md-6 col-sm-6 col-xs-12">
                        <%= text_field_tag :cell, nil, class: 'form-control col-md-7 col-xs-12', required: true %>
                      </div>
                    </div>

                    <div class="form-group">
                      <%= label_tag :password, nil, class: "control-label col-md-3 col-sm-3 col-xs-12" %>
                      <div class="col-md-6 col-sm-6 col-xs-12">
                        <%= text_field_tag :password, nil, class: 'form-control col-md-7 col-xs-12', required: true %>
                      </div>
                    </div>

                    <div class="form-group">
                      <%= label_tag :address, nil, class: "control-label col-md-3 col-sm-3 col-xs-12" %>
                      <div class="col-md-6 col-sm-6 col-xs-12">
                        <%= text_field_tag :address, nil, class: 'form-control col-md-7 col-xs-12', required: true %>
                      </div>
                    </div>

                    <div class="form-group">
                      <%= label_tag :nationality, nil, class: "control-label col-md-3 col-sm-3 col-xs-12" %>
                      <div class="col-md-6 col-sm-6 col-xs-12">
                        <%= text_field_tag :nationality, nil, class: 'form-control col-md-7 col-xs-12' %>
                      </div>
                    </div>
                    <%= render 'partials/driver_profile' %>
                    <div class="ln_solid"></div>
                    <div class="form-group">
                      <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                        <%= button_tag "Cancel", class: "btn btn-primary" %>
                        <%= submit_tag 'Save', class: 'btn btn-success' %>
                      </div>
                    </div>
                    <% end %>
                 <!--  </form> -->
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
