
<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3><%= user_index_title %></h3>
      </div>
    </div>

    <div class="clearfix"></div>

    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_content">

            <div class="well">
              <%= render "filters" %>
            </div>

            <div class="x_content scroll">
              <table id="datatable" class="table table-striped table-bordered">
                <thead>
                  <tr class="colors">
                    <th>Cell</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Verified</th>
                    <th>Actions</th>
                  </tr>
                </thead>


                <tbody>
                  <% @users.each do |user| %>
                    <tr>
                      <td><%= user.cell %></td>
                      <td><%= user.name.try(:titleize) %></td>
                      <td><%= user.email %></td>
                      <td><%= is_verified(user) %></td>
                      <td>
                        <%= link_to 'View', user_path(user), class: "btn btn-info btn-sm " %>
                        <%= link_to status_link(user.status), update_status_user_path(user, status: 'blocked'), method: :post, class: (user.status == 'active' ? "btn btn-sm btn-danger" : "btn btn-sm btn-success") %>
                      </td>
                    </tr>
                  <% end %>

                </tbody>
              </table>
            </div>
            <div class="dataTables_paginate paging_simple_numbers">
                <%= paginate @users, window: 4 %>
            </div>
            <br>
            <%= page_entries_info @users %>
            <br>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
