
<div class="right_col" role="main">
        <div class="">
          <div class="page-title">
            <div class="title_left">
              <h3>Consumers</h3>
            </div>

          </div>
          <div class="clearfix"></div>

          <div class="row">
            <%= render "filters" %>
            <div class="col-md-12 col-sm-12 col-xs-12">
              <div class="x_panel">
                <div class="x_content">
                  <table id="datatable" class="table table-striped table-bordered">
                    <thead>
                      <tr>
                        <th>Name</th>
                        <th>Cell</th>
                        <th>Email</th>
                        <th>Verified</th>
                      </tr>
                    </thead>


                    <tbody>
                      <% @users.each do |user| %>
                        <tr>
                          <td><%= user.name.try(:titleize) %></td>
                          <td><%= user.cell %></td>
                          <td><%= user.email %></td>
                          <td><%= is_verified(user) %></td>
                        </tr>
                      <% end %>

                    </tbody>
                  </table>
                  <%= paginate @users %>
                </div>
              </div>
            </div>

          </div>

        </div>
