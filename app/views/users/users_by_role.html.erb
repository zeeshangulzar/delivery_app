
<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3><%= params[:status].try(:titleize) %> Customers</h3>
      </div>
    </div>

    <div class="clearfix"></div>

    <div class="row">
      <%= render "filters" %>
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_content">
            <table id="datatable" class="table table-striped table-bordered">
              <thead>
                <tr>
                  <th>Cell</th>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Verified</th>
                  <th>Actions</th>
                </tr>
              </thead>


              <tbody>
                <% @users.each do |user| %>
                  <tr>
                    <td><%= user.cell %></td>
                    <td><%= user.name.try(:titleize) %></td>
                    <td><%= user.email %></td>
                    <td><%= is_verified(user) %></td>
                    <td>
                      <%= link_to 'View', user_path(user) %>
                      <%= link_to status_link(user.status), update_status_user_path(user, status: 'blocked'), method: :post %>
                    </td>
                  </tr>
                <% end %>

              </tbody>
            </table>
            <%= paginate @users %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
