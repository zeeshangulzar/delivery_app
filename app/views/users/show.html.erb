<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3><%= @user.name %>'s Profile</h3>
      </div>
    </div>

    <div class="clearfix"></div>

    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_content">
            <div class="well" style="display: flex; font-size:14px;">
              <div style="width: 50%">
                <div><i class="fa fa-user"></i><b> Name: </b><%= @user.name.try(:titleize) %></div>
                <div><i class="fa fa-envelope"></i><b> Email: </b><%= @user.email %></div>
                <div><i class="fa fa-phone-square" ></i><b> Cell: </b><%= @user.cell %></div>
              </div>
              <div style="width: 48%">
                <div><i class="fa fa-check-square-o"></i><b> Verified: </b><%= is_verified(@user) %></div>
                <div><i class="fa fa-calendar"></i><b> Registration Date: </b><%= time_format(@user.created_at) %></div>
                <div><i class="fa fa-calendar"></i><b> Last Updated: </b><%= time_format(@user.updated_at) %></div>
              </div>
            </div>

            <div class="x_content" style="overflow-x: scroll">
              <table id="datatable" class="table table-striped table-bordered">
                <thead>
                  <tr class="colors">
                    <th>Status</th>
                    <th>Created At</th>
                    <th>Updated At</th>
                    <th>Total Amount</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @bookings.each do |booking| %>
                    <tr>
                      <td><%= booking.status.try(:titleize) %></td>
                      <td><%= booking.created_at %></td>
                      <td><%= booking.updated_at %></td>
                      <td><%= booking.total_amount %></td>
                      <td>
                        <%= link_to 'Time Slot', time_slot_path(booking), class: "btn btn-primary btn-sm " %>
                        <%= link_to 'View', user_booking_path(user_id: @user.id, id: booking.id), class: "btn btn-info btn-sm " %>
                        <%= link_to "Delete", [@user, booking], method: :delete, data: {confirm: "Are you sure!"}, class: "btn btn-danger btn-sm "  %>
                      </td>
                    </tr>
                  <% end %>

                </tbody>
              </table>
            </div>
            <div class="dataTables_paginate paging_simple_numbers">
                <%= paginate @bookings, window: 4 %>
            </div>
            <br>
            <%= page_entries_info @bookings %>
            <br>
          </div>

          <div><%= link_to 'Back', user_by_role_users_path(role: @user.role, status: @user.status), class: "btn btn-primary" %>
        </div>

      </div>
    </div>
  </div>
</div>
