<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3><%= @user.name %>'s Profile</h3>
      </div>
    </div>

    <div class="clearfix"></div>

    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_content">
            <div class="well" style="font-size:14px;">
              <div id="info_well" style="display: flex;">
                <div id="user_info" style="width: 49%">
                  <div><i class="fa fa-user"></i><b> Name: </b><%= @user.name.try(:titleize) %></div>
                  <div><i class="fa fa-envelope"></i><b> Email: </b><%= @user.email %></div>
                  <div><i class="fa fa-phone-square" ></i><b> Cell: </b><%= @user.cell %></div>
                </div>
                <div id="user_info" style="width: 49%">
                  <div><i class="fa fa-check-square-o"></i><b> Verified: </b><%= is_verified(@user) %></div>
                  <div><i class="fa fa-calendar"></i><b> Registration Date: </b><%= time_format(@user.created_at) %></div>
                  <div><i class="fa fa-calendar"></i><b> Last Updated: </b><%= time_format(@user.updated_at) %></div>
                </div>
              </div>
            </div>

            <div class="x_content scroll">
              <h3 style="text-align: center; ">Bookings</h3>
              <table id="datatable" class="table table-striped table-bordered">
                <thead>
                  <tr class="colors">
                    <th>From</th>
                    <th>Status</th>
                    <th>Booking Time</th>
                    <th>Total Amount</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @bookings.each do |booking| %>
                    <tr>
                      <td><%= booking.location.address.try(:titleize) %></td>
                      <td><%= booking.status.try(:titleize) %></td>
                      <td><%= time_format(booking.created_at) %></td>
                      <td><%= append_qar(booking.total_amount) %></td>
                      <td>
                        <%= link_to 'View', booking_path(id: booking.id), class: "btn btn-info btn-sm " %>
                      </td>
                    </tr>
                  <% end %>

                </tbody>
              </table>
            </div>
            <div class="dataTables_paginate paging_simple_numbers">
                <%= paginate @bookings, window: 4 %>
            </div>
            <br>
            <%= page_entries_info @bookings %>
            <br>
          </div>

          <div><%= link_to 'Back', user_by_role_users_path(role: @user.role, status: @user.status), class: "btn btn-primary" %>
        </div>

      </div>
    </div>
  </div>
</div>
